<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_height = "match_parent"
	android:layout_width = "match_parent"
	tools:context = ".ActivityScrollView"
	>
	<TableLayout
		android:layout_height = "wrap_content"
		android:layout_width = "wrap_content"
		android:stretchColumns = "0"
		>
		<TableRow>
			<View
				android:background = "#000000"
				android:layout_height = "100dp"
				/>
			<TextView
				android:layout_gravity = "center_vertical"
				android:paddingLeft = "4dp"
				android:paddingRight = "4dp"
				android:text = "@string/_000000"
				/>
		</TableRow>
		<TableRow>
			<View
				android:background = "#FF0000"
				android:layout_height = "100dp"
				/>
			<TextView
				android:layout_gravity = "center_vertical"
				android:paddingLeft = "4dp"
				android:paddingRight = "4dp"
				android:text = "@string/ff0000"
				/>
		</TableRow>
		<TableRow>
			<View
				android:background = "#00FF00"
				android:layout_height = "100dp"
				/>
			<TextView
				android:layout_gravity = "center_vertical"
				android:paddingLeft = "4dp"
				android:paddingRight = "4dp"
				android:text = "@string/_00ff00"
				/>
		</TableRow>
		<TableRow>
			<View
				android:background = "#FFFF00"
				android:layout_height = "100dp"
				/>
			<TextView
				android:layout_gravity = "center_vertical"
				android:paddingLeft = "4dp"
				android:paddingRight = "4dp"
				android:text = "@string/ffff00"
				/>
		</TableRow>
		<TableRow>
			<View
				android:background = "#0000FF"
				android:layout_height = "100dp"
				/>
			<TextView
				android:layout_gravity = "center_vertical"
				android:paddingLeft = "4dp"
				android:paddingRight = "4dp"
				android:text = "@string/_0000ff"
				/>
		</TableRow>
		<TableRow>
			<View
				android:background = "#FF00FF"
				android:layout_height = "100dp"
				/>
			<TextView
				android:layout_gravity = "center_vertical"
				android:paddingLeft = "4dp"
				android:paddingRight = "4dp"
				android:text = "@string/ff00ff"
				/>
		</TableRow>
		<TableRow>
			<View
				android:background = "#00FFFF"
				android:layout_height = "100dp"
				/>
			<TextView
				android:layout_gravity = "center_vertical"
				android:paddingLeft = "4dp"
				android:paddingRight = "4dp"
				android:text = "@string/_00ffff"
				/>
		</TableRow>
		<TableRow>
			<View
				android:background = "#FFFFFF"
				android:layout_height = "100dp"
				/>
			<TextView
				android:layout_gravity = "center_vertical"
				android:paddingLeft = "4dp"
				android:paddingRight = "4dp"
				android:text = "@string/ffffff"
				/>
		</TableRow>
	</TableLayout>
</ScrollView>
